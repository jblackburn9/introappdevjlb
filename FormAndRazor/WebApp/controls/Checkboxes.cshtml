@{
    Layout = "~/_Layout.cshtml";
}

@section banner
{
    <h1>CheckBoxes</h1>
}

<form id="theform" method="post">
<div class="row">
    <div class="col-md-offset-2">
        <label id="gamegroup">Select your favourite Gaming Platform</label>
        </br>
        <input type="checkbox" id="gamegroup" name="gamegroup" value="PS4" />PS4<br />
        <input type="checkbox" id="gamegroup" name="gamegroup" value="PC" />PC<br />
        <input type="checkbox" id="gamegroup" name="gamegroup" value="XBONE" />Xbox One<br />
        <input type="checkbox" id="gamegroup" name="gamegroup" value="Switch" />Nintendo Switch<br />
        <input type="checkbox" id="gamegroup" name="gamegroup" value="Phone" />Mobile Phone<br />
        <input type="checkbox" id="gamegroup" name="gamegroup" value="Retro" />Retro<br />
    </div>
</div>
<div class="row">
    <div class="col-md-offset-3">
        <button type="submit" class="btn btn-primary" id="formbutton" name="formbutton" value="submit">Submit</button>
    </div>
</div>
</form>